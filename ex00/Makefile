NAME = btc

SRC =	main.cpp BitcoinExchange.cpp

HEADER = BitcoinExchange.hpp

CPP = c++

CPPFLAGS = -Wall -Wextra -Werror -std=c++98

OBJ = $(SRC:.cpp=.o)

%.o: %.cpp
	$(CPP) $(CPPFLAGS) -c $< -o $@

$(NAME): $(OBJ) $(HEADER)
	@echo "ðŸ¥£ .o was MADE."
	$(CPP) $(CPPFLAGS) $(SRC) -o $(NAME)

all: $(NAME)

clean:
	@rm -f $(OBJ)
	@echo "ðŸ—‘ .o is REMOVED."

fclean:
	@rm -f $(OBJ) $(NAME)
	@echo "ðŸ§½ All CLEAN."

re: fclean all
